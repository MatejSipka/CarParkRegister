<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#777777"
        tools:context="com.app.carparkregister.TabFragmentTwo">

        <Button
            android:id="@+id/button15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:background="@drawable/parking_lot"
            android:text="Free"
            android:textColor="@color/free_parking_lot"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button5"
            android:layout_below="@+id/button8"
            android:background="@drawable/parking_lot"
            android:text="Free" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button10"
            android:layout_toEndOf="@+id/imageView"
            android:background="@drawable/parking_lot"
            android:text="Free" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button5"
            android:layout_below="@+id/button5"
            android:background="@drawable/parking_lot"
            android:text="Free" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button5"
            android:layout_below="@+id/button7"
            android:background="@drawable/parking_lot"
            android:text="Free" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button5"
            android:layout_below="@+id/button9"
            android:background="@drawable/parking_lot"
            android:text="Free" />

        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button5"
            android:layout_below="@+id/button11"
            android:background="@drawable/parking_lot"
            android:text="Free" />

        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button5"
            android:layout_below="@+id/button12"
            android:background="@drawable/parking_lot"
            android:text="Free" />

        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button5"
            android:layout_below="@+id/button6"
            android:background="@drawable/parking_lot"
            android:text="Free" />

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="39dp"
            android:background="@drawable/parking_lot"
            android:text="Free" />

        <Button
            android:id="@+id/button14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button10"
            android:layout_below="@+id/button5"
            android:background="@drawable/parking_lot"
            android:text="Free" />

        <Button
            android:id="@+id/button16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button10"
            android:layout_alignTop="@+id/button5"
            android:background="@drawable/parking_lot"
            android:text="Free" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="470dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@color/lots_grass" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="260dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-40dp"
            android:layout_toEndOf="@+id/button10"
            android:src="@color/lots_grass" />

        <ImageView
            android:id="@+id/imageView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/button6"
            android:rotation="-90"
            android:src="@drawable/ic_arrow_downward_black_24dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button11"
            android:layout_toStartOf="@+id/imageView28"
            android:text="Media Hall"
            android:textColor="#adadad"
            tools:text="Media Hall" />

    </RelativeLayout>
</ScrollView>